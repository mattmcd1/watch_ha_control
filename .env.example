# Anthropic API
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx

# Home Assistant
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_long_lived_access_token

# Middleware
PORT=3000
API_KEY=your_secret_middleware_key

# Performance / caching
# HA state cache TTL in milliseconds (default: 5000)
HA_STATES_TTL_MS=5000
# HA request timeout in milliseconds (default: 6000)
HA_REQUEST_TIMEOUT_MS=6000
# Set to 0 to disable HA cache warmup on boot
HA_WARMUP_ON_START=1
# Cache up to N resolved “intent plans” (default: 500)
INTENT_CACHE_MAX=500
# Intent cache TTL in milliseconds (default: 7 days)
INTENT_CACHE_TTL_MS=604800000

# Set to 0 if HA uses a self-signed certificate (local network only)
NODE_TLS_REJECT_UNAUTHORIZED=0
